%div.header_container.clear
  .header_left 
    .header_title
      = link_to 'DateShare', root_path, class: 'title'

  .header_right
    .new_post_link 
      = link_to '新規投稿', new_post_path , class: 'new_post_link_text'
    .new_post_link_response
      = link_to '+', new_post_path, class: 'new_post_response_text'

    %div.header_user_icon.dropdown
      - if user_signed_in?
        = image_tag current_user.avatar_image, class: 'dropdown_btn', id: 'dropdown_btn'
        .dropdown_menu
          %ul.dropdown_list
            %li.dropdown_item
              = link_to 'プロフィール', profile_path, data: {'turbolinks' => false}
            %li.dropdown_item
              = link_to 'いいねした投稿', favorites_path, data: {'turbolinks' => false}
            %li.dropdown_item
              = link_to '登録内容変更', edit_user_registration_path
            %li.dropdown_item
              - if user_signed_in?
                = link_to 'ログアウト', destroy_user_session_path, data: { method: 'delete', confirm: 'ログアウトしますか？' }
              - else
                = link_to 'ログイン', new_user_session_path
      - else
        = image_tag 'avatar.png' 