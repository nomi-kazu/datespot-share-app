!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title DatespotShareApp
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    
  %body
    %header
      %div.header_container.clear
        .container 
          .header_left 
            .header_title
              = link_to 'DateShare', root_path, class: 'title'
          .header_right
            .new_post_link 
              = link_to '新規投稿', new_post_path , class: 'new_post_link_text'

            %div.header_user_icon.dropdown
              - if user_signed_in?
                = image_tag current_user.profile.avatar, class: 'dropdown_btn', id: 'dropdown_btn'
                .dropdown_menu
                  %ul.dropdown_list
                    %li.dropdown_item
                      = link_to 'プロフィール', profile_path, data: {'turbolinks' => false}
                    %li.dropdown_item
                      = link_to 'いいねした投稿', favorites_path, data: {'turbolinks' => false}
                    %li.dropdown_item
                      = link_to '登録内容変更', edit_user_registration_path
                    %li.dropdown_item
                      - if user_signed_in?
                        = link_to 'ログアウト', destroy_user_session_path, data: { method: 'delete', confirm: 'ログアウトしますか？' }
                      - else
                        = link_to 'ログイン', new_user_session_path
              - else
                = image_tag 'avatar.png' 

    .main_container  
      = yield